<header class="navbar navbar-fixed-top navbar-inverse">
  
  <div class="navbar-hearder">
    <%= link_to "Moviest", root_path, id: "logo" %>
  </div>
  
  <%= form_tag(search_path, method: :get, class: "navbar-form navbar-left") do %>
    <ul class="nav navbar-nav navbar-left">
      <li><%= search_field_tag :looking_for, nil, placeholder: 'タイトルを入力', 
                               class: "form-control" %></li>
      <li><%= button_tag '検索', class: "btn btn-primary" %></li>
    </ul>
  <% end %>
  
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム",   root_path %></li>
        <li><%= link_to "ヘルプ",   help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "ユーザーの一覧", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user == User.find_by(name: 'ゲストユーザー') %>
                    <li>
                      <%= link_to "ログアウト", logout_path, method: :delete %>
                    </li>
                  <% else %>
                    <li><%= link_to "プロフィール", current_user %></li>
                    <li><%= link_to "設定", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "ログアウト", logout_path, method: :delete %>
                    </li>
              <% end %>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>