<% provide(:title, t('views.password_resets.new.title')) %>
<%= t('views.password_resets.new.s1_html') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email, t('views.password_resets.new.label') %>
      <%= f.email_field :email, class: 'form_control' %>
      
      <%= f.submit t('views.password_resets.new.button'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>