<% provide(:title, 'Resend') %>
<h1>Resend</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:resend_activation, url: resend_activations_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form_control' %>
      
      <%= f.submit "Resend", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>